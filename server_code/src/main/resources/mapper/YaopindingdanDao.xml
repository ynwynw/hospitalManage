<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.cl.dao.YaopindingdanDao">

	<!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="com.cl.entity.YaopindingdanEntity" id="yaopindingdanMap">
        <result property="dingdanbianhao" column="dingdanbianhao"/>
        <result property="yaopinmingcheng" column="yaopinmingcheng"/>
        <result property="jiage" column="jiage"/>
        <result property="kucun" column="kucun"/>
        <result property="jine" column="jine"/>
        <result property="yaopintupian" column="yaopintupian"/>
        <result property="yaopinleixing" column="yaopinleixing"/>
        <result property="guige" column="guige"/>
        <result property="goumairenxingming" column="goumairenxingming"/>
        <result property="shoujihao" column="shoujihao"/>
        <result property="shenfenzhenghao" column="shenfenzhenghao"/>
        <result property="yuangongzhanghao" column="yuangongzhanghao"/>
        <result property="yuangongxingming" column="yuangongxingming"/>
    </resultMap>

    <select id="selectListView"
		resultType="com.cl.entity.view.YaopindingdanView" >

		SELECT  yaopindingdan.* FROM yaopindingdan  yaopindingdan 	        
        <where> 1=1 ${ew.sqlSegment}</where>
	</select>
	
	<select id="selectView"
		resultType="com.cl.entity.view.YaopindingdanView" >
		SELECT * FROM yaopindingdan  yaopindingdan <where> 1=1 ${ew.sqlSegment}</where>
	</select>



    <select id="selectValue" resultType="map" >
        SELECT ${params.xColumn}, ROUND(sum(${params.yColumn}),1) total FROM yaopindingdan
        <where> 1=1 ${ew.sqlSegment}</where>
        group by ${params.xColumn}
        limit 10
    </select>

    <select id="selectTimeStatValue" resultType="map" >
        <if test = 'params.timeStatType == "日"'>
                SELECT DATE_FORMAT(${params.xColumn},'%Y-%m-%d') ${params.xColumn}, sum(${params.yColumn}) total FROM yaopindingdan
                <where> 1=1 ${ew.sqlSegment}</where>
                group by DATE_FORMAT(${params.xColumn},'%Y-%m-%d')
        </if>
        <if test = 'params.timeStatType == "月"'>
                SELECT DATE_FORMAT(${params.xColumn},'%Y-%m') ${params.xColumn}, sum(${params.yColumn}) total FROM yaopindingdan
                <where> 1=1 ${ew.sqlSegment}</where>
                group by DATE_FORMAT(${params.xColumn},'%Y-%m')
        </if>
        <if test = 'params.timeStatType == "年"'>
                SELECT DATE_FORMAT(${params.xColumn},'%Y') ${params.xColumn}, sum(${params.yColumn}) total FROM yaopindingdan
                <where> 1=1 ${ew.sqlSegment}</where>
                group by DATE_FORMAT(${params.xColumn},'%Y')
        </if>
    </select>

    <select id="selectGroup" resultType="map" >
        SELECT ${params.column} , count(1) total FROM yaopindingdan
        <where> 1=1 ${ew.sqlSegment}</where>
        group by ${params.column}
        limit 10
    </select>



</mapper>
